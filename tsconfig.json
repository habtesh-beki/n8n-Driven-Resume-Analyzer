{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // ✅ Match your package.json "type": "module"
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".", // ✅ Important to preserve folder structure from root
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["Backend/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
